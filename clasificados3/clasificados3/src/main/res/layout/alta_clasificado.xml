<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_gravity="center" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Titulo:"
                            android:id="@+id/textView"
                            android:layout_column="0"
                            android:gravity="bottom|right" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_titulo"
                            android:layout_column="1"
                            android:layout_weight="1" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Descripcion:"
                            android:id="@+id/textView2"
                            android:layout_column="0"
                            android:gravity="bottom|right" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_descripcion"
                            android:layout_column="1"
                            android:layout_weight="1" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tableRow" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Precio:"
                            android:id="@+id/textView5"
                            android:layout_column="0"
                            android:gravity="bottom|right" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="10"
                            android:id="@+id/et_precio"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:layout_span="2" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Categoria:"
                            android:id="@+id/textView4"
                            android:layout_column="0"
                            android:gravity="bottom|right"
                            android:layout_gravity="center_vertical" />

                        <Spinner
                            android:id="@+id/sp_categorias"
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:layout_column="1"
                            android:layout_height="wrap_content" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Imagen:"
                            android:id="@+id/textView3"
                            android:layout_column="0"
                            android:gravity="right|fill_vertical" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <Button
                                android:layout_width="146dp"
                                android:layout_height="@dimen/ancho_de_botones"
                                android:text="Seleccionar"
                                android:id="@+id/button3"
                                android:onClick="seleccionarImagen"
                                style="@style/boton_el_tincho_naranja"
                                android:layout_marginLeft="14dp" />

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="match_parent"
                                android:id="@+id/iv_imagen1"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </TableRow>
                </TableLayout>

                <Button
                    android:layout_width="295dp"
                    android:layout_height="@dimen/ancho_de_botones"
                    android:text="Nuevo"
                    android:id="@+id/button"
                    android:layout_column="0"
                    android:onClick="nuevoClasificado"
                    style="@style/boton_el_tincho_azul"
                    android:layout_marginTop="63dp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>