<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/et_usuario"
                    android:textColor="#ffffff"
                    android:textStyle="italic"
                    android:textSize="19dp"
                    android:background="#774ed8" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"
                android:layout_gravity="center"
                android:layout_marginBottom="41dp"
                android:layout_marginTop="35dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/scrollView"
                    android:layout_gravity="center" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/ll_menu">

                        <Button
                            style="@style/boton_el_tincho_naranja"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/ancho_de_botones"
                            android:text="Nuevo Clasificado"
                            android:id="@+id/button"
                            android:layout_column="0"
                            android:onClick="nuevoClasificado" />

                        <Button
                            style="@style/boton_el_tincho_verde"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/ancho_de_botones"
                            android:text="Listar Clasificados"
                            android:id="@+id/button2"
                            android:layout_column="0"
                            android:onClick="listarClasificados"
                            android:layout_marginTop="35dp" />

                        <Button
                            style="@style/boton_el_tincho_azul"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/ancho_de_botones"
                            android:text="Mis Clasificados"
                            android:id="@+id/button3"
                            android:layout_column="0"
                            android:onClick="misClasificados"
                            android:layout_marginTop="35dp" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/ancho_de_botones"
                            android:text="Nueva Categoria"
                            android:id="@+id/bt_alta_categoria"
                            android:layout_column="0"
                            android:layout_marginTop="35dp"
                            style="@style/boton_el_tincho_2"
                            android:onClick="nuevaCategoria" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/ancho_de_botones"
                            android:text="Listar Categorias"
                            android:id="@+id/bt_listar_categoria"
                            android:layout_column="0"
                            android:layout_marginTop="35dp"
                            style="@style/boton_el_tincho_naranja2"
                            android:onClick="listadoCategorias" />

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom">

                <Button
                    style="@style/boton_el_tincho_gris"
                    android:layout_width="128dp"
                    android:layout_height="@dimen/ancho_de_botones"
                    android:text="Cancelar"
                    android:id="@+id/button4"
                    android:layout_gravity="right|bottom"
                    android:onClick="cancelar" />
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>